import java.awt.BorderLayout;
import java.awt.GridLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class AirportSimView {
	
	private JFrame window;
	private JPanel panel;
	private JLabel label, title, arrivals, takeoffs;
	private JButton start, exit; 
	private JTextField arrivalsInput, takeoffsInput;
	
	public AirportSimView() {
		
		// Initialize and display window
		window = new JFrame(" ");
		panel = new JPanel();
		window.setSize(300,400);
		window.setDefaultCloseOperation(window.EXIT_ON_CLOSE);
		window.setVisible(true);
		window.add(panel, BorderLayout.CENTER);
		panel.setLayout(new GridLayout());
				
		title = new JLabel("Airport Simulator (PAY)");
		label = new JLabel("Press 'Start' to begin simulation.");
		arrivals = new JLabel("Arrivals");
		takeoffs = new JLabel("Takeoffs");
		arrivalsInput = new JTextField("");
		takeoffsInput = new JTextField("");
		
		// Set buttons
		start = new JButton("Start");
		exit = new JButton("Exit");
		
		start.setSize(70,30);
		start.setLocation(60,300);
		
		exit.setSize(70,30);
		exit.setLocation(150,300);
		
		title.setSize(200,20);
		title.setLocation(5,0);
		
		label.setSize(200,10);
		label.setLocation(10,40);
		
		arrivals.setSize(100,30);
		arrivals.setLocation(10,90);
		
		takeoffs.setSize(100,30);
		takeoffs.setLocation(80,90);
		
		arrivalsInput.setSize(70,30);
		arrivalsInput.setLocation(20,200);
		
		takeoffsInput.setSize(70,30);
		takeoffsInput.setLocation(100,200);
		
		panel.add(title, BorderLayout.NORTH);
        panel.add(label);
        panel.add(arrivals);
        panel.add(takeoffs);
        panel.add(start);
        panel.add(exit);
        panel.add(arrivalsInput);
        panel.add(takeoffsInput);
        
        
	}
	
	// Add event handlers for the program
	public void addListener(AirportSimController controller) {
		
	}
	
}
