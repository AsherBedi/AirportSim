import javax.swing.JButton;
import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.event.ActionListener;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class AirportSimView {
	
	private JFrame window;
	private JPanel panel;
	private JButton start;
	private JButton exit;
	
	public AirportSimView() {
		
		// Initialize and display window
		window = new JFrame(" ");
		panel = new JPanel();
		window.setSize(300,400);
		window.setDefaultCloseOperation(window.EXIT_ON_CLOSE);
		window.setVisible(true);
		window.add(panel);
				
		// Set buttons
		start = new JButton("Start");
		exit = new JButton("Exit");
		
		start.setSize(20,100);
		start.setLocation(130,400);
		
		exit.setSize(20,10);
		exit.setLocation(170,400);
		
        // Create a ButtonEventListener object
        //ActionListener buttonListener = new AirportSimController();
        // And associate it with the textButton
        //start.addActionListener( buttonListener );
        panel.add(start);
        panel.add(exit);
	}
	
	// Add event handlers for the program
	public void addListener(AirportSimController controller) {
		
	}
	
}
